@model UsersModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="card" style="width:25%;">
        <div class="card-body">
            <form method="post" asp-action="Login">
                <div class="text-center mb-3">
                    <h5>Login</h5>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label" style="font-weight: bold;">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" name="Email" asp-for="Email" aria-describedby="emailHelp" autocomplete="off">
                    <span class="text-danger">@TempData["errorMessageEmail"]</span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label" style="font-weight: bold;">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" autocomplete="off" name="Password" asp-for="Password">
                    <span class="text-danger">@TempData["errorMessagePassword"]</span>
                </div>
                <button type="submit" class="btn btn-outline-primary d-grid gap-2 col-2 mx-auto">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>
