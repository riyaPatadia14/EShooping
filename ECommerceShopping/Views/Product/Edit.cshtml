@model ProductViewDto

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <title>Create</title>
</head>
<body>
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-center">
                <h5>Add Product</h5>
            </div>
            <form method="post" asp-action="Edit" enctype="multipart/form-data" id="editForm">
                <div class="container text-center">
                    <div class="row">
                        <div class="col">
                            <label for="exampleInputEmail1" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" aria-describedby="emailHelp" name="Title" asp-for="Title" autocomplete="off">
                            <input type="hidden" class="form-control" id="title" aria-describedby="emailHelp" name="Id" asp-for="Id" autocomplete="off">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label for="exampleInputEmail1" class="form-label">Description</label>
                            <input type="text" class="form-control" id="description" aria-describedby="emailHelp" name="Description" asp-for="Description" autocomplete="off">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label for="exampleInputEmail1" class="form-label">Price</label>
                            <input type="text" class="form-control" id="price" aria-describedby="emailHelp" name="Price" asp-for="Price" autocomplete="off">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="container text-center">
                    <div class="row">
                        <div class="col">
                            <label for="exampleInputEmail1" class="form-label">Category</label>
                            <select class="form-control" id="category" name="CategoriesId" asp-for="CategoriesId" autocomplete="off">
                                <option value="">Select Category</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Value" selected="@(Model.CategoriesId == int.Parse(category.Value) ? "selected" : null)">
                                        @category.Text
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="CategoriesId" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label for="exampleInputEmail1" class="form-label">Brand</label>
                            <select class="form-control" id="brandsId" name="BrandsId" asp-for="BrandsId" autocomplete="off">
                                <option value="">Select Category</option>
                                @foreach (var brands in Model.Brands)
                                {
                                    <option value="@brands.Value" selected="@(Model.BrandsId == int.Parse(brands.Value) ? "selected" : null)">
                                        @brands.Text
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="BrandsId" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label for="exampleInputEmail1" class="form-label">Color</label>
                            <select class="form-control" id="colorsId" name="ColorId" asp-for="ColorId" autocomplete="off">
                                <option value="">Select Colors</option>
                                @foreach (var colors in Model.Colors)
                                {
                                    <option value="@colors.Value" selected="@(Model.ColorId == int.Parse(colors.Value) ? "selected" : null)">
                                        @colors.Text
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="ColorId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row g-0 text-center">
                    <div class="col-sm-6 col-md-4">
                        <label for="exampleInputEmail1" class="form-label">Image Path</label>
                        <input type="file" class="form-control" id="chooseImg" aria-describedby="emailHelp" name="ImageFile" asp-for="ImageFile" autocomplete="off">
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="col-4 col-md-2 p-2">
                        <img src="~/img/category-img/@Model.ImagePath" style="width:100px; height:100px" class="border border-white rounded-3" id="imgPreview" name="ImagePath" asp-for="ImagePath" autocomplete="off" />
                    </div>
                    <div class="col-2 col-md-1 p-3 form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="isActive" checked name="IsActive" asp-for="IsActive" autocomplete="off">
                        <label class="form-check-label" for="flexSwitchCheckChecked">Active</label>
                        <span asp-validation-for="InStock" class="text-danger"></span>
                    </div>
                    <div class="col-2 col-md-1 p-3 ">
                        <label class="form-check-label" for="inStock">InStock</label>
                        <input class="form-check-input" type="checkbox" role="switch" id="active" checked name="IsActive" asp-for="InStock" autocomplete="off">
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="float-end">
                    <button type="button" class="btn btn-secondary" onclick="@("window.location.href='" + @Url.Action("Index", "Product") + "'");" id="btn-close">Close</button>
                    <button type="submit" class="btn btn-primary" id="btn-save">Save</button>
                </div>
            </form>
        </div>
    </div>
    @section scripts{
        <script src="~/js/category/category.js"></script>
    }
</body>
</html>
