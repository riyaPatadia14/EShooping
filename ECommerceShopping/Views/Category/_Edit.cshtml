@model CategoryViewDto

@{
    ViewData["Title"] = "Edit";
}
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailCategoryLabel">Update Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="editModalContent">
                    <form method="post" asp-action="Edit" enctype="multipart/form-data" id="editForm">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Category Name</label>
                            <input type="text" class="form-control" id="categoryName" aria-describedby="emailHelp" name="CategoryName" asp-for="CategoryName" autocomplete="off">
                            <input type="hidden" class="form-control" id="updateId" aria-describedby="emailHelp" name="Id" asp-for="Id">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Image Path</label>
                            <input type="file" class="form-control" id="chooseImg" aria-describedby="emailHelp" name="ImageFile" asp-for="ImageFile" autocomplete="off">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Image</label>
                            <img src="~/img/category-img/@Model.ImagePath" style="width:100px; height:100px" class="border border-white rounded-3" id="imgPreview" autocomplete="off" name="ImagePath" asp-for="ImagePath" />
                            <input type="hidden" class="form-control" id="updateId" aria-describedby="emailHelp" name="ImagePath" asp-for="ImagePath">
                        </div>
                        <div class="form-check form-switch mb-3">
                            <label class="form-check-label" for="activeSwitch">Active</label>
                            <input class="form-check-input" type="checkbox" id="activeSwitch" style="margin-left:2%;" name="Active" asp-for="Active" autocomplete="off">
                            <div class="status-indicator"></div>
                        </div>
                        <button type="button" class="btn btn-secondary" id="btn-close" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" id="btn-save">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/category/category.js"></script>   