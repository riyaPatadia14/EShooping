@model PaginatedList<CategoryListDto>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <button type="button" class="btn btn-primary float-end" data-bs-toggle="modal" id="btnCreateModal" style="margin-left:5%;">
        <i class="fa fa-plus" aria-hidden="true"></i>
    </button>
    <div class="container mt-3">
        <h2>Category List</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>CategoryName</th>
                    <th>ImagePath</th>
                    <th>Active</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td><img src="~/img/category-img/@item.ImagePath" style="width:100px; height:100px" /></td>
                        <td>@item.Active</td>
                        <td>

                            <a asp-action="Details" asp-route-id="@item.Id" class="detailFormAction" data-category-id="@item.Id">
                                <i class="fa fa-eye btn btn-info" aria-hidden="true"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" id="editFormAction">
                                <i class="fa fa-pencil-square-o btn btn-success" aria-hidden="true"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" id="deleteFormAction">
                                <i class="fa fa-trash btn btn-danger" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        Next
    </a>
    @*Create Modal Start*@
    <div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="modal-body">
                        @Html.Partial("_Create", new CategoryAddDto())
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    @*Create Modal End*@
    @*Delete Modal start*@
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="modal-body">
                        @Html.Partial("_Delete", new CategoryAddDto())
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    @*Delete Modal End*@
    @*Edit Modal Start*@
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Update Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @Html.Partial("_Edit", new CategoryViewDto())
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    @*Edit Modal End*@
    @*Details Modal Start*@
    <div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="details-modal">
                    @Html.Partial("_Details", new CategoryViewDto())
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    @*Details Modal End*@
    @section scripts{
        <script src="~/js/category/model.js"></script>
    }
</body>
</html>
